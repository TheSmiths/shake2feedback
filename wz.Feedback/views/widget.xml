<Alloy>
	<Window id="wzFeedback_window" class="wzFeedback_window">
		<Button id="wzFeedback_cancel" class="wzFeedback_cancel" onClick="closeWindow" />
		<Button id="wzFeedback_send" class="wzFeedback_send" onClick="sendFeedback" />
		<TextArea id="wzFeedback_comment" class="wzFeedback_comment" onFocus="removeHintText"></TextArea>
		<ImageView id="wzFeedback_screenshot" class="wzFeedback_screenshot">
			<PaintView id="wzFeedback_paint" class="wzFeedback_paint" module="ti.paint" />
		</ImageView>
	</Window>
</Alloy>